<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Node basic</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload-file">Upload</a>
    </div>
    <h3>Listuser table</h3>
    <table>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>address</th>
            <th>action</th>
        </tr>

        <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
                <td>
                    <%= dataUser[i].id %>
                </td>
                <td>
                    <%= dataUser[i].firstName %>
                </td>
                <td>
                    <%= dataUser[i].lastName %>
                </td>
                <td>
                    <%= dataUser[i].address %>
                </td>
                <td class="actions">
                    <a href="/detail/user/<%= dataUser[i].id %>" type="submit">Detail</a>
                    <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                        <button type="submit">Edit</button>
                    </form>
                    <form action="/delete-user" method="POST">
                        <input type="text" hidden value="<%= dataUser[i].id %>" name="id" > 
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
            <% } %>
    </table>
    <form action="/create-new-user" method="POST">
        <div class="create-user-container">
            Create new user
            <div>
                <label>First name: </label>
                <input type="text" name="firstName"/>
            </div>
            <div>
                <label>Last name: </label>
                <input type="text" name="lastName"/>
            </div>
            <div>
                <label> Email: </label>
                <input type="email" name="email"/>
            </div>
            <div>
                <label>Address: </label>
                <input type="text"  name ="address"/>
            </div>
            <button type="submit" class="btn-submit">Submit</button>
        </div>
    </form>
</body>

</html>